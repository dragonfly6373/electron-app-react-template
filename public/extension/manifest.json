{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Only One Page",

    "description": "Prevent browser open same the same web-site twice",
    "homepage_url": "https://google.com",
    "icons": {
        "48": "icons/icon-one_48.png",
        "96": "icons/icon-one_96.png"
    },
    "host_permissions": ["https://docs.fedoraproject.org/*", "http://locahost:3000/*", "http://127.0.0.1:3000/*"],
    "permissions": ["activeTab", "tabs", "storage"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
        "default_title": "Only One Page",
        "default_popup": "popup/index.html",
        "default_icon": "icons/icon-one_48.png"
    },
    "web_accessible_resources": []
}
